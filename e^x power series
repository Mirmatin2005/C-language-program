#include <stdio.h>
int main ()
{
    double x;
    int n;
    printf("enter x value: ");
    scanf("%lf", &x);
    printf("enter n value: ");
    scanf("%d", &n);

    double sum = 1;
    double xt = 1;
    int fact = 1;
    int i = 1;
    while(i <= n)
    {
        xt = xt * x;
        fact = fact * i;
        sum = sum + xt/fact;
        i = i + 1;
    }
    while(i >= n)
    {
        printf("\n%.3lf\n", sum);
        break;
    }
}
